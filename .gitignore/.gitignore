using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Project_Euler_1
    //This is a solution for the first problem in Project Euler. Wish to solve all of the 611
{
    class Program
    {
        static void Main(string[] args)
        {
            int NUM = 1000;
            int result = 0;
            for (int i = 1; i < NUM; i++)
            {
                if (i % 3 == 0 || i % 5 == 0)
                    result += i;
            }
            Console.WriteLine("The sum of all numbers dividable by 3 or 5 is: " + result);
            Console.ReadLine();

        }
    }
}
